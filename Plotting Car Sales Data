%matplotlib inline
import matplotlib.pyplot as plt
import numpy as np
import pandas as pd

# Make a dataframe
car_sales = pd.read_csv('car_sales.csv')
car_sales

# Remove '$', '.', and ',' from Price column
car_sales["Price"] = car_sales["Price"].str.replace('[\$\,\.]', '')

# Remove last two zeros
car_sales["Price"] = car_sales["Price"].str[:-2]

# Create new Total Sales column
car_sales["Total Sales"] = car_sales["Price"].astype(int).cumsum()

#Convert Price column to int
car_sales["Price"] = car_sales["Price"].astype(int)

# Group by Make
car_sales = car_sales.groupby("Make").mean().reset_index()

#Plot average price by make in a bar plot
car_sales.plot(x="Make", y="Price", kind="bar")
